{% extends 'FrontOffice/navbar.html.twig' %}

{% block title %}Booking Success{% endblock %}

{% block body %}
<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    .modal-content {
        position: relative;
        z-index: 2;
        background: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
        width: 400px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .video-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
    }
</style>
<div class="modal-overlay">
    <video class="video-background" autoplay muted loop>
        <source src="/images/mataar.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="modal-content">
        <div class="modal-header" style="margin-bottom: 2rem;">
            <!-- Your SVG icon for the checkmark -->
        </div>
        <h2 class="modal-title" style="color: #333; font-weight: bold;">Success</h2>
        <p class="modal-body" style="font-size: 1rem; margin-bottom: 2rem;">Thank you for your reservation</p>
        <a href="{{ path('showFac') }}" class="btn btn-success" style="text-decoration: none; color: white; background-color: #333; padding: 0.5rem 1rem; border-radius: 5px;">Back to Accommodations</a>
    </div>
</div>

