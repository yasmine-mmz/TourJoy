{% extends 'FrontOffice/navbar.html.twig' %}

{% block title %}Favorite Accommodations{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4 mb-5">Favorite Accommodations</h1>

    {% if favoriteAccommodations is empty %}
        <p class="text-center">You have no favorite accommodations yet.</p>
    {% else %}
        <div class="row">
            {% for fav in favoriteAccommodations %}
                {% set accommodation = fav.acc %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ vich_uploader_asset(accommodation, 'imageFile') }}" class="card-img-top" alt="{{ accommodation.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ accommodation.name }}</h5>
                            <p class="card-text">Price: {{ accommodation.price }} TND</p>
                            <p class="card-text">Rooms: {{ accommodation.nbRooms }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('book_accommodation', {'refA': accommodation.refA}) }}" class="btn btn-info btn-block">Book</a>
                            <a href="{{ path('favorites_remove', {'refA': accommodation.refA}) }}" class="btn btn-danger btn-block mt-2">Remove from Favorites</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="text-center mt-4">
        <a href="{{ path('favorites_clear') }}" class="btn btn-warning">Clear All Favorites</a>
    </div>
</div>
<br>
<br>
