{% extends 'BackOffice/navbars.html.twig' %}

{% block main %}
{% block status %} 
{% endblock %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Add Subscription</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.plan) }}
                        {{ form_widget(form.plan, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.plan) }}
                    </div>
                    <div class="mb-3">
    {{ form_label(form.duration,'Duration(Days)') }}
    {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.duration) }}
</div>
                   
                    <div class="mb-3">
                        {{ form_label(form.typeT,'Type') }}
                        {{ form_widget(form.typeT, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.typeT) }}
                    </div>
                    
                    
                    
                    <button id="submit-btn" type="submit" class="btn btn-primary btn-block">Add</button>
                    {{ form_end(form) }}
                    
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% block footer %}
    <br>
{% endblock %}