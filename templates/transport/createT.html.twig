{% extends 'BackOffice/navbars.html.twig' %}

{% block body %}
 

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Add Transportation</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.typeT, 'Type') }}
                        {{ form_widget(form.typeT, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.typeT) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.country, 'Country') }}
                        {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.country) }}
                    </div>
                         
                    
                    <button id="submit-btn" type="submit" class="btn btn-primary">Add</button>
                    {{ form_end(form) }}
                    
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% block footer %}
    <br>
{% endblock %}