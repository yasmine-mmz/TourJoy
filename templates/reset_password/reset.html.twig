{% extends 'FrontOffice/navbar.html.twig' %}

{% block navbar %}
    {# Leave this block empty if you don't need to override the navbar #}
{% endblock %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}

<style>
    .needs-validation .form-control {
        padding: 1rem;
        height: auto;
    }

    .form-floating > label {
        padding: 1rem 1rem 1rem 0.75rem;
    }

    .btn-primary {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-primary:hover {
        background-color: #004085;
        border-color: #003768;
    }

    .card {
        border-radius: 0.5rem;
    }

    .card-header {
        font-size: 1.5rem;
    }

    .d-grid > .btn {
        padding: 0.75rem 1rem;
        font-size: 1.2rem;
    }
</style>


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Reset Your Password</h2>
                </div>
                <div class="card-body py-4">
                    {{ form_start(resetForm, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                        <div class="form-floating mb-3">
                            {{ form_label(resetForm.plainPassword.first, 'New Password', {'label_attr': {'for': 'new_password'}}) }}
                            {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'New password', 'id': 'new_password'}}) }}
                            {{ form_errors(resetForm.plainPassword.first) }}
                        </div>
                        <div class="form-floating mb-3">
                            {{ form_label(resetForm.plainPassword.second, 'Repeat Password', {'label_attr': {'for': 'repeat_password'}}) }}
                            {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Repeat new password', 'id': 'repeat_password'}}) }}
                            {{ form_errors(resetForm.plainPassword.second) }}
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Reset Password</button>
                        </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
    
{% endblock %}
