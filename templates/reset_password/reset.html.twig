{% extends 'FrontOffice/navbar.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center">Reset Your Password</h1>
                </div>
                <div class="card-body">
                    {{ form_start(resetForm, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(resetForm.plainPassword, 'New Password', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your new password'}}) }}
                            {% if resetForm.plainPassword.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(resetForm.plainPassword) }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                        </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
    
{% endblock %}
