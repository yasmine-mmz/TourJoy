{% extends 'FrontOffice/navbar.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}
<br>
<br>
<br>
<br>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Reset Your Password</h3>
                    </div>
                    <div class="card-body">
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}
                        {{ form_start(requestForm, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="form-group">
                                {{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email address'}}) }}
                                {{ form_errors(requestForm.email) }}
                            </div>
                            <div class="form-group text-center">
                                <small class="text-muted">
                                    Enter your email address, and we will send you a link to reset your password.
                                </small>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Send Password Reset Email</button>
                            </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {# You can add footer content here if needed #}
{% endblock %}
