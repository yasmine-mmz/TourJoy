{% extends 'FrontOffice/navbar.html.twig' %}


{% block body %}
	<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
	<br>
	<br>
	<br>
	<br>
	<br>

	<div class="container" style="margin-left: 25%; max-width: 200%">
		<div class="row">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">
						<h2>Update Profile</h2>
					</div>
					<div class="card-body">
						<div class="row">
							
							<div class="col-md-6">
								{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
								<div class="row">
									<div class="col-md-12">
										{{ form_row(form.email, {'attr': {'class': 'form-control mb-3', 'tabindex': '1'}}) }}
										{{ form_errors(form.email) }}
									</div>
									<div class="col-md-6">
										{{ form_row(form.firstName, {'attr': {'class': 'form-control mb-3', 'tabindex': '3'}}) }}
										{{ form_errors(form.firstName) }}
									</div>
									<div class="col-md-6">
										{{ form_row(form.lastName, {'attr': {'class': 'form-control mb-3', 'tabindex': '4'}}) }}
										{{ form_errors(form.lastName) }}
									</div>
									<div class="col-md-6">
										{{ form_row(form.country, {'attr': {'class': 'form-control mb-3', 'tabindex': '5'}}) }}
										{{ form_errors(form.country) }}
									</div>
									<div class="col-md-6">
										{{ form_row(form.phoneNumber, {'attr': {'class': 'form-control mb-3', 'tabindex': '6'}}) }}
										{{ form_errors(form.phoneNumber) }}
									</div>
									<div class="col-md-6">
										{{ form_row(form.profilePicture, {'attr': {'class': 'form-control-file mb-3', 'tabindex': '7'}}) }}
										{{ form_errors(form.profilePicture) }}
									</div>
									<div class="col-md-12">
										{{ form_row(form.plainPassword, {'attr': {'class': 'form-control mb-3', 'tabindex': '8'}}) }}
										{{ form_errors(form.plainPassword) }}
									</div>
								</div>
								<div class="mb-3">
									<a href="{{ path('app_forgot_password_request')}}">Change Password</a>
								</div>
								<button type="submit" class="btn btn-primary btn-block" tabindex="10">Update Profile</button>
								{{ form_end(form) }}
                                
							</div>
                            <div class="col-md-6" style="padding-top: 3vh; padding-left: 14vh" > 
								{% if user.profilePicture %}
									<img src="{{ asset('uploads/profile_pictures/' ~ user.profilePicture) }}" alt="Profile Picture" class="rounded-circle" style="max-width: 150px; max-height: 150px;">
								{% else %}
									<img src="{{ asset('img/noProfilePicture.png') }}" alt="Profile Picture" class="rounded-circle" style="max-width: 150px; max-height: 150px;">
								{% endif %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<br>
	<br>
	<br>
	<br>
{% endblock %}

{% block footer %}
	<script>
		$(document).ready(function () {
$('#countrySelect').select2();
});
	</script>
{% endblock %}
