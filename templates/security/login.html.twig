{% extends 'FrontOffice/navbar.html.twig' %}

{% block navbar %}
    <br>
{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<style>
  .social-btn-fb {
    background-color: #fff;
    color: #000;
    border: 2px solid #000;
    border-radius: 0.5em;
    transition: background-color 0.3s, color 0.3s, border-color 0.3s;
    position: relative; /* Add position relative for the button container */
  }

  .social-btn-fb i {
    position: absolute; /* Set the icon to absolute position */
    left: 0; /* Align the icon to the far left */
    margin-left: 5%
  }

  .social-btn-gg {
    background-color: #fff;
    color: #000;
    border: 2px solid #000;
    border-radius: 0.5em;
    transition: background-color 0.3s, color 0.3s, border-color 0.3s;
    position: relative; /* Add position relative for the button container */
  }

  .social-btn-gg i {
    position: absolute; /* Set the icon to absolute position */
    left: 0; /* Align the icon to the far left */
    margin-left: 5%
  }

  .social-btn-x {
    background-color: #fff;
    color: #000;
    border: 2px solid #000;
    border-radius: 0.5em;
    transition: background-color 0.3s, color 0.3s, border-color 0.3s;
    position: relative; /* Add position relative for the button container */
  }

  .social-btn-x i {
    position: absolute; /* Set the icon to absolute position */
    left: 0; /* Align the icon to the far left */
    margin-left: 5%
  }

  .social-btn-fb:hover{
    background-color: #0866ff;
    color: #fff;
    border-color: #0866ff;
  }
  .social-btn-gg:hover{
    background-color: #DB4437;
    color: #fff;
    border-color: #DB4437;
  }
  .social-btn-x:hover {
    background-color: #1DA1F2;
    color: #fff;
    border-color: #1DA1F2;
  }
    .logo-container {
    position: fixed;
    top: 10%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 9999; }    

  .logo {
    max-width: 100%;

  }
</style>

<a class="logo-container" href="{{ path('app_test') }}">
    <img src="img/logo.png" alt="TourJoy Logo" class="logo"  >
</a>


<div class="container" style="margin-top: 5%; margin-left: ">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5 mb-4 h-100" >
        <div class="card-body h-100">
          <h5 class="card-title text-center">Log In</h5>

          {% if error %}
            <div class="alert alert-danger" role="alert">
              {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
          {% endif %}

          {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

          <form method="post" novalidate>
            <div class="mb-3">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="mb-3">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

            <div class="mb-3">
              <a href="{{ path('app_forgot_password_request')}}">Forgot password?</a>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            </div>
          </form>

          <div class="mt-3 text-center">
            Don't have an account? <a href="{{ path('app_register') }}">Sign Up</a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 d-flex align-items-start">
      <div class="card mt-5 mb-4 w-100 h-100">
        <div class="card-body h-100">
          <h5 class="card-title text-center">Or</h5>
          <hr>
          <div class="text-center mb-3">
            <p class="mb-0">Connect with:</p>
          </div>
          {# <button class="btn social-btn-fb w-100 mb-2  " type="button" style="margin-top: 10%">
    <i class="fab fa-facebook-f"></i> Continue with Facebook
</button> #}
<hr>
<a class="btn social-btn-gg w-100 mb-2" role="button" href="{{ path('connect_google_start') }}">
    <i class="fab fa-google"></i> Continue with Google
</a>

<hr>
{# <button class="btn social-btn-x w-100" type="button">
    <i class="fab fa-twitter"></i> Continue with Twitter
</button> #}
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}

{% block footer %}
    <br>
{% endblock %}