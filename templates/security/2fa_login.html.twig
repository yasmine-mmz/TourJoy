        <form class="form" action="/2fa_check" method="post">
            <p> </p>
                <input class="form-control ds-input" style="width: 200px; height:40px; margin-left:190px" id="_auth_code"
                    type="text"
                    name="_auth_code"
                    placeholder="   Authentication Code"
                    autocomplete="one-time-code"
                    autofocus  >
                <p> </p><section style="margin-left:200px">
