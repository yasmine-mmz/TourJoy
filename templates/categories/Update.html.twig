{% extends 'BackOffice/navbars.html.twig' %}

{% block body %}
{% block status %} 
{% endblock %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Update category</h4>
                </div>
                <div class="card-body">
                {{ form_start(Categories, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(Categories.name) }}
                        {{ form_widget(Categories.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(Categories.name) }}
                    </div>
                         
                    
                    <button id="submit-btn" type="submit" class="btn btn-primary">Update</button>
                    {{ form_end(Categories) }}
                    
            </div>
        </div>
    </div>
</div>

