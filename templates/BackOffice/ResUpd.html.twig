{% extends 'BackOffice/navbars.html.twig' %}

{% block main %}
    <h1 class="text-center mb-4">Update Reservation</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(f, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    {{ form_label(f.name) }}
                    {{ form_widget(f.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(f.startDate) }}
                    {{ form_widget(f.startDate, {'attr': {'class': 'form-control datepicker'}, 'value': f.vars.value.startDate|date('Y-m-d')} ) }}
                </div>
                <div class="form-group">
                    {{ form_label(f.endDate) }}
                    {{ form_widget(f.endDate, {'attr': {'class': 'form-control datepicker'}, 'value': f.vars.value.endDate|date('Y-m-d')} ) }}
                </div>
                <br>
                {# Captcha field #}
                <div class="form-group">
                    {{ form_label(f.captchaCode) }}
                    {{ form_widget(f.captchaCode) }}
                </div>
                <br>
                <div class="form-group text-center">
                    {{ form_widget(f.BOOK, {'label': 'Update', 'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(f) }}
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
    <br>
{% endblock %}

{% block scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        // Initialize datepicker for elements with class "datepicker"
        $(document).ready(function(){
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });
        });
    </script>
{% endblock %}
