{% extends 'BackOffice/navbars.html.twig' %}

{% block body %}

    <h1>Bookings Statistics</h1>
    
    <h2>Bookings Per Guide</h2>
    <canvas id="BookingStatsChart" style="max-height: 400px; display: block; box-sizing: border-box; height: 359px; width: 719px;" width="719" height="359"></canvas>
    
    <h2>Bookings Per Month</h2>
    <canvas id="BookingPerMonthChart" style="max-height: 400px; display: block; box-sizing: border-box; height: 359px; width: 719px;" width="719" height="359"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx1 = document.getElementById('BookingStatsChart').getContext('2d');
            var BookingStatsChart = new Chart(ctx1, {
                type: 'pie',
                data: {
                    labels: {{ guideLabels|json_encode|raw }},
                    datasets: [{
                        label: 'Bookings',
                        data: {{ guideData|json_encode|raw }},
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',  // Red
                            'rgba(54, 162, 235, 0.2)',  // Blue
                            'rgba(255, 206, 86, 0.2)',  // Yellow
                            'rgba(75, 192, 192, 0.2)',  // Green
                            'rgba(153, 102, 255, 0.2)', // Purple
                            'rgba(255, 159, 64, 0.2)',  // Orange
                            'rgba(255, 99, 132, 0.2)'   // Red (repeated for additional parts)
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',    // Red
                            'rgba(54, 162, 235, 1)',    // Blue
                            'rgba(255, 206, 86, 1)',    // Yellow
                            'rgba(75, 192, 192, 1)',    // Green
                            'rgba(153, 102, 255, 1)',   // Purple
                            'rgba(255, 159, 64, 1)',    // Orange
                            'rgba(255, 99, 132, 1)'     // Red (repeated for additional parts)
                        ],
                        borderWidth: 1
                    }]
                },
               
            });

            var ctx2 = document.getElementById('BookingPerMonthChart').getContext('2d');
            var BookingPerMonthChart = new Chart(ctx2, {
                type: 'bar',
                data: {
                    labels: {{ monthsLabels|json_encode|raw }},
                    datasets: [{
                        label: 'Bookings',
                        data: {{ monthsData|json_encode|raw }},
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',  // Red
                            'rgba(54, 162, 235, 0.2)',  // Blue
                            'rgba(255, 206, 86, 0.2)',  // Yellow
                            'rgba(75, 192, 192, 0.2)',  // Green
                            'rgba(153, 102, 255, 0.2)', // Purple
                            'rgba(255, 159, 64, 0.2)',  // Orange
                            'rgba(255, 99, 132, 0.2)'   // Red (repeated for additional parts)
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',    // Red
                            'rgba(54, 162, 235, 1)',    // Blue
                            'rgba(255, 206, 86, 1)',    // Yellow
                            'rgba(75, 192, 192, 1)',    // Green
                            'rgba(153, 102, 255, 1)',   // Purple
                            'rgba(255, 159, 64, 1)',    // Orange
                            'rgba(255, 99, 132, 1)'     // Red (repeated for additional parts)
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        x: {
                            stacked: true
                        },
                        y: {
                            stacked: true,
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        });
    </script>
     

<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
{% endblock %}
