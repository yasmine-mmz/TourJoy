{% extends 'BackOffice/navbars.html.twig' %}

{% block main %}
    <h1>List of accommodations</h1>
    <a href="{{ path('addF1') }}" class="btn btn-Add">Add</a>
    <table class="accommodation-table">
        <thead>
            <tr>
                <th>Ref</th>
                <th>Name</th>
                <th>Country</th>
                <th>Type</th>
                <th>Price</th>
                <th>Room number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for t in response %}
                <tr>
                    <td>{{ t.refA }}</td>
                    <td>{{ t.name }}</td>
                    <td>{{ t.fkpays }}</td>
                    <td>{{ t.type }}</td>
                    <td>{{ t.price }}</td>
                    <td>{{ t.nbRooms }}</td>
                    <td>
                        <a href="{{ path('update1', {'refA': t.refA}) }}" class="btn btn-update">Update</a>
                        <a href="{{ path('remove1', {'refA': t.refA}) }}" class="btn btn-delete">Remove</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>



    <style>
        .accommodation-table {
            width: 100%;
            border-collapse: collapse;
        }

        .accommodation-table th, .accommodation-table td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        .btn {
            padding: 6px 12px;
            margin: 5px;
            text-decoration: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-update {
            background-color: #007bff;
            color: #fff;
        }

        .btn-Add {
            background-color: #007bff;
            color: #fff;
            display: inline-block;
            margin-bottom: 10px;
            padding: 8px 16px;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-delete {
            background-color: #ff0000;
            color: #fff; 
        }
    </style>


    
{% endblock %}
