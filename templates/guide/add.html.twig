{% extends 'BackOffice/navbars.html.twig' %}


{% block body %}


	<body>

	{% block content %}
		<style>
			/* Form Container */
			.form-container {
				max-width: 60%;
				margin: 0 auto;
			}

			/* Form Style */
			.form-container form {
				background-color: #f9f9f9;
				padding: 20px;
				border-radius: 10px;
				box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
			}

			/* Form Input Fields */
			.form-container input[type="text"],
			.form-container input[type="email"],
			.form-container input[type="password"] {
				width: 100%;
				padding: 10px;
				margin: 8px 0;
				border: 1px solid #ccc;
				border-radius: 5px;
			}

			/* Form Submit Button */
			.form-container input[type="submit"] {
				background-color: #000 !important; /* Set background color to black */
				color: #fff !important; /* Set text color to white */
				padding: 12px 20px;
				border: none;
				border-radius: 5px;
				cursor: pointer;
				width: 100%;
				transition: background-color 0.3s ease; /* Smooth transition for hover effect */
			}


			/* Form Submit Button Hover Effect */
			.form-container input[type="submit"]:hover {
				background-color: #000; /* Change background color to black on hover */
				color: #fff; /* Change text color to white on hover */
			}


			/* Custom Select Style */
			.form-container select {
				width: 100%;
				padding: 10px;
				margin: 8px 0;
				border: 1px solid #ccc;
				border-radius: 5px;
				background-color: #fff;
				font-size: 16px;
				cursor: pointer;
				appearance: none;
				-webkit-appearance: none;
				-moz-appearance: none;
				background-image: url('data:image/svg+xml;utf8, <svg fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M7.68 11.895a.75.75 0 0 1-1.06-1.06L7.94 9.44V5.75a.75.75 0 0 1 1.5 0v3.69l1.32 1.33a.75.75 0 0 1-1.06 1.06L8 10.56l-.32.32z"/></svg>');
				background-repeat: no-repeat;
				background-position: right 10px top 50%, 0 0;
				background-size: 16px auto, 100%;
			}

			.form-row {
				display: flex;
				justify-content: space-between;
				margin: 8px 0;
			}

			/* Flex items for form columns */
			.form-column {
				flex: 1;
				padding: 0 10px;
			}
		</style>

		<div class="form-container" style="margin-top: 4%">

		<h2 style="margin-left: 35%">Guide Submission</h2>
			{{ form_start(f, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

			<div class="form-row">
				<div
					class="form-column">
					<!-- First column fields -->
					{{ form_row(f.CIN) }}
					{{ form_row(f.firstnameG, {'label': 'First Name'}) }}
					{{ form_row(f.lastnameG,  {'label': 'Last Name'}) }}
					{{ form_row(f.emailaddressG,  {'label': 'Email Address'}) }}
					{{ form_row(f.phonenumberG,  {'label': 'Phone Number'}) }}
				</div>
				<div
					class="form-column">
					<!-- Second column fields -->
					{{ form_row(f.dob,  {'label': 'Date Of Birth'}) }}
					{{ form_row(f.country,  {'label': 'Country'}) }}
					{{ form_row(f.genderG,  {'label': 'Gender'}) }}
					{{ form_row(f.language,  {'label': 'Language'}) }}
					{{ form_row(f.imageFile)}}
				</div>
			</div>

			<div class="text-center">
				{{ form_row(f.save, { 'label': 'Submit', 'attr': {'class': 'btn btn-primary'} }) }}
			</div>
			{{ form_end(f) }}
		</div>

	{% endblock %}

	<br><br><br>


</body>

{% endblock %}
